html 
    head 
        script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js')
        link(rel='stylesheet', type='text/css', href='static/styles/fonts.css')
        link(rel='stylesheet', type='text/css', href='static/styles/main.css')
        meta(name="viewport", content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0")
    body 
        div(id="status")
        div(id="members")  
        div.columnVideo
            video#mainVideo(src="static/videos/WEBSITE-COMPOSITION.mp4",autoplay="true",loop="true",muted="true",playsinline="true") 
        div.bubbles.gridLeft
            img.grid(src="static/img/grid.svg")
        div.bubbles
            img#gridLeft(src="static/img/bubbles-left1.png")
        div.bubbles.bubblesRight
            img#gridRight(src="static/img/bubbles-right1.png")
        div.bubbles.gridRight
            img.grid.gridRight(src="static/img/grid.svg")
        div.column
            h2#headline.H2desktop(onclick="scrolltoContent('headlineContent');"). 
                Mesh
            div#headlineContent.headline.section
                h2#headline.mobileH2.
                    Mesh
                h1=headline
            h2#statement.H2desktop(onclick="scrolltoContent('statementContent');")=statement      
            div#statementContent.statement.section
                h2#headline.mobileH2=statement      
                h1=theme
                 
                h3 !{statementContent.replace(/\n/g, "<br />")}

            h2.H2desktop(onclick="scrolltoContent('programContent');")=program
            #programContent.program.section 
                h2.mobileH2=program
                h1 !{programContent.replace(/\n/g, "<br />")}
 
            h2.H2desktop(onclick="scrolltoContent('contactContent');")=contact
            div#contactContent.contact.section
                h2.mobileH2=contact
                h3.
                    Mesh<br>
                    Festival f&uuml;r Kunst und Technologie <br>
                    Freilager-Platz 3<br>
                    4142 M&uuml;nchenstein<br>
                    info@mesh.festival
                h3 !{pressContact.replace(/\n/g, "<br />")}
                h1. 
                    Follow us on Instagram!
                li.submit
                    a(href="https://instagram.com/meshfestival/",target="_blank").
                        @meshfestival
            h2.H2desktop(onclick="scrolltoContent('newsletterContent');").
                Newsletter        
            div#newsletterContent.newsletter.section
                h2.mobileH2.
                    Newsletter   
                h3 !{newsletterContent.replace(/\n/g, "<br />")}
                label.     
                    Name<br>
                input(type="text")
                <br>
                label.
                    E-Mail    <br>   
                input(type="text")
                <br>
                li.submit.
                    Subscribe
                .logos
                    span=initiative
                        br
                    a(href="https://www.hek.ch",target="_blank")
                        img(src="static/img/hek.svg")
                    a(href="https://iart.ch/",target="_blank")
                        img(src="static/img/iart.svg")
                    a(href="https://www.fhnw.ch/de/die-fhnw/hochschulen/hgk/institut-experimentelles-design-und-medienkulturen",target="_blank")
                        img(src="static/img/fhnw.svg")
                    a(href="datenschutz")=disclaimer
            
        #lang
            a(href =lang)=lang
        .videoSubtitleWrap(data-max="11")
        #credits

        script. 
            let video = !{JSON.stringify(video)}
            let colors = !{JSON.stringify(colors)}
        script(src='static/script/main.js')
